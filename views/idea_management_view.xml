<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_idea_management_tree" model="ir.ui.view">
        <field name="name">view.idea_management.tree</field>
        <field name="model">idea.management</field>
        <field name="arch" type="xml">
            <tree string="Idea">
                <field name="user_id"/>
                <field name="name"/>
                <field name="state"/> 
                <field name="idea_type"/>                
                <field name="company_id"/> 
            </tree>
        </field>
    </record>

    <record id="view_idea_management_form" model="ir.ui.view">
        <field name="name">view.idea_management.form</field>
        <field name="model">idea.management</field>
        <field name="arch" type="xml">
            <form string="Idea">
                    <header>
                        <!-- Lo de los botones para que aparezcan en orden mediante vaya apretando unos y salgan otro no funciona, me salen los 3 del tirÃ³n y puedo apretar el que yo quiera. -->
                        <button string="Aprobar" name='aprobar' type="object" invisible="state!='revision'" /> <!-- Si ponemos invisible="1" el botÃ³n sera invisible siempre -->
                        <button string="En proceso" name="proceso" type="object" invisible="state!='aprobada'" />
                        <button string="Completar" name="completada" type="object" invisible="state not in 'proceso,aprobada'"/>
                        <button string="Votar" name="open_vote_form" type="object" invisible="state not in 'proceso'"/>
                        <button string="Cancelar" name="cancelada" type="object" invisible="state not in 'revision,aprobada,proceso,completada'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    
                    <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="create_date"/>
                            <field name="deadline"/>
                        </group>

                        <group>
                            <field name="company_id" context="{'default_is_company': True}" domain="[('is_company', '=', True)]"/>                       
                            <field name="idea_type"/>
                            <field name="price"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Detalles">
                            <field name="details"/> 
                        </page>

                        <page string="Votos de los usuarios">
                            <field name="details"/> 
                        </page>
                    </notebook>
                </sheet>
                    <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
            </form>
        </field>
    </record>

    <record id="view_idea_vote_form" model="ir.ui.view">
        <field name="name">view.idea_new_form</field>
        <field name="model">idea.management</field>
        <field name="arch" type="xml">
            <form string="Voto">
                <header>
                    <field name="idea_id" readonly="1"/> 
                </header>
                <h1>Rating</h1>
                <field name="rating" widget="priority"/>
                <sheet>
                    <group>
                        <field name="comments"/>
                    </group>
                    <group>
                        <field name="voter_id"/>
                    </group>
                </sheet>
                <footer>
                    <!-- <button string="Guardar" name="save" type="object" class="btn-primary"/> -->
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>                 
                </footer>
            </form>
        </field>
    </record>


</odoo>            